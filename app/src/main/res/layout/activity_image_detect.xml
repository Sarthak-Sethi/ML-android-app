<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="133dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/click_here" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/holo_purple"
        android:paddingTop="50dp"
        android:textSize="20sp"
        android:text="THE  PREDICTED OBJECT IN IMAGE IS"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:gravity="center"

        android:text="NO image selected"
        android:textColor="#d60060"
        android:id="@+id/displayobjname">
    </TextView>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@android:color/holo_purple"
    android:paddingTop="50dp"
    android:textSize="20sp"
    android:text="EXPECTED PERCENTAGE OF ITS ACCURACY">

</TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="#d60060"
        android:text="NO image selected"
        android:textSize="25sp"
        android:id="@+id/displayobjpercentage">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/holo_purple"
        android:paddingTop="50dp"
        android:textSize="20sp"
        android:text="TEXT RECOGNISATION FROM IMAGE">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="#d60060"
        android:text="NO image selected"
        android:textSize="15sp"
        android:id="@+id/displaytextfromimage">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="NO COPYRIGHT A GOOGLE API"
        android:textSize="10sp"
        >
    </TextView>

</LinearLayout>
</ScrollView>